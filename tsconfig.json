{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmit": true,
    "noEmitOnError": true,
    "typeRoots": [ "node_modules/@types" ],
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"]
    }
  }
}
